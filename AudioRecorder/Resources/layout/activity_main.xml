<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Record Area"
        android:id="@+id/textViewRecord"
        android:textSize="30sp"
        android:textColor="#000000"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/buttonRecord"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintVertical_bias="0.2"/>
    <Button
         android:layout_width="0.0dp"
         android:layout_height="wrap_content"
        android:id="@+id/buttonRecord"
        android:text="Start Record"
        android:textAllCaps="false"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewRecord"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonStopRecord"
        app:layout_constraintBottom_toTopOf="@+id/textViewPlay"
        />
      <Button
         android:layout_width="0.0dp"
         android:layout_height="wrap_content"
        android:id="@+id/buttonStopRecord"
        android:text="Stop Record"
        android:textAllCaps="false"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/buttonRecord"
        app:layout_constraintStart_toEndOf="@+id/buttonRecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/buttonRecord"
        />
     <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play Area"
        android:id="@+id/textViewPlay"
        android:textSize="30sp"
        android:textColor="#000000"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonRecord"
        app:layout_constraintBottom_toTopOf="@+id/buttonPlayRecord"/>
    <Button
         android:layout_width="0.0dp"
         android:layout_height="wrap_content"
        android:id="@+id/buttonPlayRecord"
        android:text="Play Record"
        android:textAllCaps="false"
        android:padding="15dp"
        app:layout_constraintTop_toBottomOf="@+id/textViewPlay"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/buttonStop"
        app:layout_constraintBottom_toBottomOf="parent"
        />
      <Button
         android:layout_width="0.0dp"
         android:layout_height="wrap_content"
        android:id="@+id/buttonStop"
        android:text="Stop"
        android:textAllCaps="false"
        android:padding="15dp"
        android:layout_marginLeft="10dp"
        app:layout_constraintTop_toTopOf="@+id/buttonPlayRecord"
        app:layout_constraintStart_toEndOf="@+id/buttonPlayRecord"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/buttonPlayRecord"
        />
</androidx.constraintlayout.widget.ConstraintLayout >